[alias]
	add-aw = "!git diff -w --no-color | git apply --cached --ignore-whitespace"
	amend = commit --amend
	branchname = "!f() { git rev-parse --abbrev-ref HEAD | tr -d '\\n'; }; f"
	brm = "branch -d"
	ci = commit
	cm = checkout main
	co = checkout
	create-remote-branch = "!sh -c 'git push origin origin:refs/heads/$1' -"
	d = diff
	dc = diff --cached
	delete-remote = "!sh -c ' git push origin :$1' -"
	fc = "!sh -c 'git rev-parse $1 | tee | pbcopy' -"
	lastweeklog = "log --since='two fridays ago at noon' --before='one friday ago' --author='james' origin/main"
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	pom = push origin main
	ppl = "!sh -c 'git pull --rebase && git push && git log' -"
	pr = pull --rebase
	rc = rebase --continue
	reci = commit --amend --no-edit
	ri = rebase -i
	rr = "!f() { git fetch && git rebase origin/$1; }; f"
	stash-unstaged = "stash --keep-index -u"
	stat = status -s
	track-remote = "!sh -c 'git branch --track $1 origin/$1' -"
	tags = "!sh -c 'git tag | sort -t. --key=1,1n --key=2,2n --key=3,3n | tail'"
	weeklog = "log --since='last friday at noon' --author='james' origin/main"
	whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
	whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
	wip = !sh -c 'git add -A && git commit --no-verify --message=\"${1:-wip}\"' -

[branch]
	autosetuprebase = always

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = red

[commit]
	gpgsign = true

[core]
	pager = less -F -X -R
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = code --wait
	excludesfile = ~/.gitignore
	autocrlf = input
	commentChar = ";"

[gpg]
	program = /opt/homebrew/bin/gpg

[init]
	defaultBranch = main

[merge]
	ff = true

[merge "npm-merge-driver"]
	name = automatically merge npm lockfiles
	driver = npx npm-merge-driver merge %A %O %B %P

[push]
	default = current
	autoSetupRemote = true

[sequence]
	editor = vim

[user]
	name = James A Rosen
	email = gh@jamesarosen.com

[include]
	path = ~/.gitconfig.local
