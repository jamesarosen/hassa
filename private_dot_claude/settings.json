{
  "env": {
    "PAGER": ""
  },
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(sqlite3 *)",
      "Bash(duckdb *)",
      "Bash(git show *)",
      "Bash(git log *)",
      "Bash(git rev-parse *)",
      "Bash(git diff *)",
      "Bash(git branch *)",
      "Bash(git status *)",
      "Bash(git status)",
      "Bash(gh pr list*)",
      "Bash(gh pr view *)",
      "Bash(gh pr status*)",
      "Bash(gh pr diff *)",
      "Bash(gh pr checks *)",
      "Bash(gh issue list*)",
      "Bash(gh issue view *)",
      "Bash(gh issue status*)",
      "Bash(gh repo view*)",
      "Bash(gh run list*)",
      "Bash(gh run view *)",
      "Bash(gh run watch *)",
      "Bash(gh workflow list*)",
      "Bash(gh workflow view *)",
      "Bash(gh search *)",
      "Bash(gh label list*)",
      "Bash(gh status*)",
      "Bash(gh browse*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:cli.github.com)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:github.blog)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "mcp__context7__get-library-docs",
      "mcp__context7__resolve-library-id"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify-long-turn.sh"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true,
  "defaultMode": "acceptEdits"
}
