{
  "env": {
    "PAGER": ""
  },
  "permissions": {
    "allow": [
      "Bash(duckdb *)",
      "Bash(gh browse*)",
      "Bash(gh issue list*)",
      "Bash(gh issue status*)",
      "Bash(gh issue view *)",
      "Bash(gh label list*)",
      "Bash(gh pr checks *)",
      "Bash(gh pr diff *)",
      "Bash(gh pr list*)",
      "Bash(gh pr status*)",
      "Bash(gh pr view *)",
      "Bash(gh repo view*)",
      "Bash(gh run list*)",
      "Bash(gh run view *)",
      "Bash(gh run watch *)",
      "Bash(gh search *)",
      "Bash(gh status*)",
      "Bash(gh workflow list*)",
      "Bash(gh workflow view *)",
      "Bash(git add *)",
      "Bash(git branch *)",
      "Bash(git commit *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git reset --soft *)",
      "Bash(git rev-parse *)",
      "Bash(git show *)",
      "Bash(git show)",
      "Bash(git status *)",
      "Bash(git status)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(sqlite3 *)",
      "mcp__context7__get-library-docs",
      "mcp__context7__resolve-library-id",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:cli.github.com)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:github.blog)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)"
    ],
    "deny": ["Read(./.env)", "Read(./.env.*)"]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify-long-turn.sh"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true,
  "defaultMode": "acceptEdits"
}
